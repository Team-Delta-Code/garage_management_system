      <script>
        function validateForm() {
            // Get all input and select elements
            const customerName = document.querySelector('input[type="text"]');
            const serviceSelect = document.querySelector('select');
            const contactNumber = document.querySelector('input[type="tel"]');
    
            // Create an array to store error messages
            const errors = [];
    
            // Validate Customer Name
            if (!customerName.value.trim()) {
                errors.push("Please enter your name.");
                customerName.style.borderColor = 'red';
            } else {
                customerName.style.borderColor = '';
            }
    
            // Validate Service Selection
            if (serviceSelect.value === '--Select--') {
                errors.push("Please select a service.");
                serviceSelect.style.borderColor = 'red';
            } else {
                serviceSelect.style.borderColor = '';
            }
    
            // Validate Contact Number
            const phoneRegex = /^[0-9]{10}$/; // Assumes 10-digit phone number
            if (!contactNumber.value.trim()) {
                errors.push("Please enter your contact number.");
                contactNumber.style.borderColor = 'red';
            } else if (!phoneRegex.test(contactNumber.value.trim())) {
                errors.push("Please enter a valid 10-digit contact number.");
                contactNumber.style.borderColor = 'red';
            } else {
                contactNumber.style.borderColor = '';
            }
    
            // Display errors or proceed with booking
            if (errors.length > 0) {
                // Create error message
                const errorMessage = errors.join('\n');
                alert(errorMessage);
            } else {
                // If all validations pass, proceed to booking confirmation
                alert('Make payment to conform your aapoinment');
                // You could add additional logic here like form submission
                window.location.href = 'makepayment.html';
            }
        }
        </script>


